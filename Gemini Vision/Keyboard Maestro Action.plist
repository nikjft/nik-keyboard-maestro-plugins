<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>Name</key>
	<string>Gemini Vision</string>
	<key>Author</key>
	<string>Nik</string>
	<key>Icon</key>
	<string>icon.png</string>
	<key>Help</key>
	<string>Gemini AI Vision plugin - analyzes images using Gemini API.</string>
	<key>URL</key>
	<string>https://github.com/nikjft/nik-keyboard-maestro-plugins</string>
	<key>Script</key>
	<string>gemini_vision.sh</string>
	<key>Title</key>
	<string>Gemini Vision</string>
	<key>Results</key>
	<string>Window|Variable|Clipboard</string>
	<key>Parameters</key>
	<array>
		<dict>
			<key>Label</key>
			<string>Model</string>
			<key>Type</key>
			<string>PopupMenu</string>
			<key>Default</key>
			<string>gemini-2.5-flash</string>
			<key>Menu</key>
			<string>gemini-2.5-flash|gemini-2.5-pro|gemini-3-flash-preview|gemini-3-pro-preview</string>
		</dict>
		<dict>
			<key>Label</key>
			<string>API Key</string>
			<key>Type</key>
			<string>TokenString</string>
			<key>Default</key>
			<string>%Variable%GeminiAPIKey%</string>
			<key>Placeholder</key>
			<string>Get API key from aistudio.google.com</string>
		</dict>
		<dict>
			<key>Label</key>
			<string>Image Source</string>
			<key>Type</key>
			<string>TokenString</string>
			<key>Default</key>
			<string>%CurrentClipboard%</string>
			<key>Placeholder</key>
			<string>%CurrentClipboard% or /path/to/image.png</string>
		</dict>
		<dict>
			<key>Label</key>
			<string>Prompt</string>
			<key>Type</key>
			<string>TokenText</string>
			<key>Placeholder</key>
			<string>e.g. "Extract the text" or "Describe the UI"</string>
		</dict>
	</array>
</dict>
</plist>